@page "/messages"
<h3>Messages <button id="toggleDarkMode" class="btn btn-secondary">Toggle Dark Mode</button></h3>


<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />

<style>
    body {
        background-color: azure; 
        background-size: cover; 
        background-repeat: no-repeat; 
        margin-top: 20px;
        font-family: 'Arial', sans-serif; 
    }

    .card {
        background: #ffffff; 
        transition: .5s;
        border: 0;
        margin-bottom: 30px;
        border-radius: .55rem;
        position: relative;
        width: 100%;
        box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.1);
    }

    .chat-app .people-list {
        width: 280px;
        position: absolute;
        left: 0;
        top: 0;
        padding: 20px;
        z-index: 7;
        background-color: #ffffff; 
    }

    .chat-app .chat {
        margin-left: 280px;
        border-left: 1px solid #e0f7fa; 
    }

    .people-list {
        transition: .5s;
    }

        .people-list .chat-list li {
            padding: 10px 15px;
            list-style: none;
            border-radius: 3px;
        }

            .people-list .chat-list li:hover {
                background: #b2ebf2; 
                cursor: pointer;
            }

            .people-list .chat-list li.active {
                background: #b2ebf2; 
            }

            .people-list .chat-list li .name {
                font-size: 16px; 
                color: #00796b; 
            }

        .people-list .chat-list img {
            width: 45px;
            border-radius: 50%;
        }

        .people-list img {
            float: left;
            border-radius: 50%;
        }

        .people-list .about {
            float: left;
            padding-left: 8px;
        }

        .people-list .status {
            color: #757575; 
            font-size: 14px;
        }

    .chat .chat-header {
        padding: 15px 20px;
        border-bottom: 2px solid #e0f7fa; 
        background-color: #ffffff; 
    }

        .chat .chat-header img {
            float: left;
            border-radius: 40px;
            width: 40px;
        }

        .chat .chat-header .chat-about {
            float: left;
            padding-left: 10px;
        }

    .chat .chat-history {
        padding: 20px;
        border-bottom: 2px solid #ffffff; 
        background-color: #f1f8e9; 
    }

        .chat .chat-history ul {
            padding: 0;
        }

            .chat .chat-history ul li {
                list-style: none;
                margin-bottom: 30px;
            }

                .chat .chat-history ul li:last-child {
                    margin-bottom: 0px;
                }

        .chat .chat-history .message-data {
            margin-bottom: 15px;
        }

            .chat .chat-history .message-data img {
                border-radius: 40px;
                width: 40px;
            }

        .chat .chat-history .message-data-time {
            color: #424242; 
            padding-left: 6px;
        }

        .chat .chat-history .message {
            color: #333; 
            padding: 18px 20px;
            line-height: 26px;
            font-size: 16px;
            border-radius: 7px;
            display: inline-block;
            position: relative;
        }

            .chat .chat-history .message:after {
                bottom: 100%;
                left: 7%;
                border: solid transparent;
                content: " ";
                height: 0;
                width: 0;
                position: absolute;
                pointer-events: none;
                border-bottom-color: #ffffff; 
                border-width: 10px;
                margin-left: -10px;
            }

        .chat .chat-history .my-message {
            background: #b2ebf2; 
        }

            .chat .chat-history .my-message:after {
                bottom: 100%;
                left: 30px;
                border: solid transparent;
                content: " ";
                height: 0;
                width: 0;
                position: absolute;
                pointer-events: none;
                border-bottom-color: #b2ebf2; 
                border-width: 10px;
                margin-left: -10px;
            }

        .chat .chat-history .other-message {
            background: #e0f2f1; 
            text-align: right;
        }

            .chat .chat-history .other-message:after {
                border-bottom-color: #e0f2f1; 
                left: 93%;
            }

    .chat .chat-message {
        padding: 20px;
    }

    .online,
    .offline,
    .me {
        margin-right: 2px;
        font-size: 8px;
        vertical-align: middle;
    }

    .online {
        color: #4caf50; 
    }

    .offline {
        color: #f44336;
    }

    .me {
        color: #2196f3; 
    }

    .float-right {
        float: right;
    }

    .clearfix:after {
        visibility: hidden;
        display: block;
        font-size: 0;
        content: " ";
        clear: both;
        height: 0;
    }

    .dark-mode {
        background-color: #121212;
        color: #ffffff;
    }

        .dark-mode .card {
            background: #1e1e1e;
        }

        .dark-mode .people-list {
            background-color: #1e1e1e;
        }

        .dark-mode .chat .chat-header {
            background-color: #1e1e1e;
        }

        .dark-mode .chat .chat-history {
            background-color: #2a2a2a;
        }

            .dark-mode .chat .chat-history .message {
                background: #3a3a3a;
                color: #ffffff;
            }

        .dark-mode .people-list .chat-list li .name {
            color: #bb86fc;
        }

        .dark-mode .people-list .status {
            color: #b0bec5;
        }

        .dark-mode .online {
            color: #76ff03;
        }

        .dark-mode .offline {
            color: #ff5252;
        }

        .dark-mode .me {
            color: #03a9f4;
        }
</style>

<div class="container">
   
